{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-jsx", 
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "src/*"]
    },
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"]
  },
  "include": ["src", "**/*.tsx", "**/*.ts", "custom.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
